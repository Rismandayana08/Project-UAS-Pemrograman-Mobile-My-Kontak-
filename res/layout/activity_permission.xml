<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Icon Lokasi -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_location_permission"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precise"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginBottom="50dp"/>

    <!-- Tombol-tombol izin -->
    <Button
        android:id="@+id/btn_while_using"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:text="While using the app"
        android:textColor="#000000"
        android:background="@drawable/btn_permission"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btn_only_this_time"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:text="Only this time"
        android:textColor="#000000"
        android:background="@drawable/btn_permission"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btn_dont_allow"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:text="Don't allow"
        android:textColor="#000000"
        android:background="@drawable/btn_permission"/>

</LinearLayout>